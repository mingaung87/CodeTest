@model CodeTest.Models.AmotizeModel

@{
    ViewBag.Title = "Amortization Schedule";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AmotizeModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.LoanAmount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LoanAmount)
            @Html.ValidationMessageFor(model => model.LoanAmount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InterestRate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InterestRate)
            @Html.ValidationMessageFor(model => model.InterestRate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Month)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Month)
            @Html.ValidationMessageFor(model => model.Month)
        </div>

        <p>
            <input type="submit" value="Calculate" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Home", "Index","Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
